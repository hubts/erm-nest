{
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@app/sdk": ["src"],
            "@app/sdk/*": ["src/*"]
        }
    }
}
