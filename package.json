{
    "name": "event-reward-management",
    "version": "0.0.2-9",
    "description": "REST API for Event Reward Management",
    "author": "@hubts",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hubts/event-reward-management.git"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/gateway/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e:auth": "jest --config ./apps/auth/test/jest-e2e.json",
        "test:e2e:gateway": "jest --config ./apps/gateway/test/jest-e2e.json",
        "test:e2e:event": "jest --config ./apps/event/test/jest-e2e.json",
        "#----------------MONGO-DB------------------#": "MONGO-DB",
        "mongo:run": "cd ./tools/mongo && ./run.sh",
        "mongo:access": "cd ./tools/mongo && ./scripts/mongo-access.sh",
        "#----------------GIT-----------------------#": "GIT",
        "git": "./scripts/git/skyrocket.sh",
        "#----------------SDK-----------------------#": "SDK",
        "sdk": "cd sdk && yarn publish",
        "sdk:link": "cd sdk && yarn build && yarn link && cd .. && yarn link $npm_package_name-sdk"
    },
    "dependencies": {
        "@faker-js/faker": "^9.7.0",
        "@nestjs/common": "^11.1.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/microservices": "^11.1.1",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.1",
        "@nestjs/swagger": "^11.2.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dotenv": "^16.5.0",
        "mongoose": "^8.14.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "swagger-themes": "^1.4.3",
        "webpack": "^5.99.8"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^11.1.1",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/node": "18.11.18",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "commitizen": "^4.3.1",
        "cz-emoji-conventional": "^1.2.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.3.1",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^29.3.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typescript": "^5.8.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-emoji-conventional",
            "disableScopeLowerCase": true,
            "disableSubjectLowerCase": true
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^@app/sdk(|/.*)$": "<rootDir>/libs/sdk/src/$1"
        }
    }
}
